<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fn_selected_spinner_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/fn_field_margin_right_and_left"
        android:layout_marginTop="@dimen/fn_field_margin_top_or_bottom"
        android:layout_marginRight="@dimen/fn_field_margin_right_and_left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fn_selected_spinner_field_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="hi how r y"
            android:textColor="@color/black"
            android:textSize="@dimen/fn_field_text_size"
            />

        <Spinner
            android:id="@+id/fn_selected_spinner"
            android:layout_width="fill_parent"
            android:background="@drawable/edittext_border_grey"
            android:layout_height="wrap_content" />

        <!--  <android.support.v7.widget.AppCompatCheckBox
              android:id="@+id/fn_field_checkbox_value"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/CadetBlue"
              android:padding="10dp"
              android:textColor="@color/black"
              android:textSize="17sp" />-->

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/fn_field_line_margin_top"
            android:layout_height="1dp"
            android:background="@color/fn_grey_line_border"></View>
    </LinearLayout>


</android.support.v7.widget.CardView>