<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="200dp"
    android:orientation="vertical"
    tools:context="net.logiico.formnativeandroidjava.fragment.OptionDialogFragment">

    <net.logiico.formnativeandroidjava.customView.PersianTextView
        android:id="@+id/fragment_option_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical|right"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/attachment_list"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_option_dialog_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
